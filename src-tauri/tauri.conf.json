{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RookReader",
  "version": "1.5.2",
  "identifier": "com.rookro.rookreader.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rook Reader",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "target/dependencies/pdfium/lib/*": "libs/",
      "target/dependencies/pdfium/LICENSE": "licenses/pdfium/LICENSE",
      "target/dependencies/pdfium/licenses/**/*": "licenses/pdfium/",
      "target/dependencies/licenses/frontend-licenses.txt": "licenses/frontend-licenses.txt",
      "target/dependencies/licenses/backend-licenses.html": "licenses/backend-licenses.html"
    },
    "licenseFile": "../LICENSE"
  }
}
